generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Cartao {
  id               String   @id
  PortasPermitidas Porta[]
  Acessos          Acesso[]
}

model Porta {
  id                String   @id @default(cuid())
  CartoesPermitidos Cartao[]
  Acessos           Acesso[]
}

model Acesso {
  idAcesso      Int      @id @default(autoincrement())
  cartao        Cartao?  @relation(fields: [idCartao], references: [id], onDelete: SetNull)
  idCartao      String?
  porta         Porta?   @relation(fields: [idPorta], references: [id], onDelete: SetNull)
  idPorta       String?
  dataInteracao DateTime @default(now())
  liberado      Boolean
}
